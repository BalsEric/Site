<% include ./partials/header %>

 <hr class="hr-text" style="margin-top:80px;" data-content="Shopping Cart">
<div class="container text-center headerRow">
    <div class="row">
        <div class="col-3">
            Product Image
        </div>
        <div class="col-1">
            Product Name
        </div>
        <div class="col-4">
            Product Description
        </div>
        <div class="col-1">
            Product Price and Currency
        </div>
        <div class="col-3">
            Functions - Delete
        </div>
    </div>
    <% var j=-1; %>
    <% products.forEach(function(product){ %>
        <% j++; %>
    <div class="row itemRow text-center">
        <div class="col-3">
            <img class="wish-Img" src="<%=product.image%>" alt="">
        </div>
        <div class="col-1">
            <p><%=product.name%></p>
        </div>
        <div class="col-4">
            <p><%=product.desc%></p>
        </div>
        <div class="col-1">
            <p>$ <span id="price"><%=product.price%></span></p>
        </div>
        <div class="col-3">
            <form action="/home/shoppingCart/<%=j%>/delete?_method=DELETE" method="POST">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
    <hr>
    <% }); %>
     <div class="row total">
              <p>TOTAL : $ <span id="total"></span></p>
              
        
         <div class="w-100"></div>
         <% if(currentUser.shoppingCart.length==0){ %>
            <a style="color:white" class="btn btn-danger btnTotal btn-block">No items yet</a>
        <%  } else {%>
         <a class="btn btn-success btnTotal btn-block" href="/home/shoppingCart/checkOut">Checkout</a>
       <% } %>
     </div>

     
</div>

<script type="text/javascript" src="/scripts/shoppingCart.js"></script>



<% include ./partials/footer %>