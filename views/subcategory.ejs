<% include ./partials/header %>
<p id="pth" class="path"><a  href="/home/<%=category._id%>/">Home</a>/<a 
         href="/home/<%=category._id%>/<%=index%>" class="disabled"><%=subctg.title%></a></p>
<p id="ctgName" style="display:none"><%=category.name%></p>
 <hr class="hr-text" data-content="Products">
<div class="container subbrd border ">
   <% for(var i=0;i<= subctg.products.length-1 ; i++){ %>
    <div class="row align-items-center content dim ">
        <div class="col-md-6">
            <img src="<%=subctg.products[i].image%>"
                alt="" class="img-fluid">
        </div>
        <div class="col-md-6 text-center">
            <div class="row justify-content-center">
                <div>
                     <hr class="hr-text2" data-content="<%= subctg.products[i].name %>">
                    <form action="/home/<%=category._id%>/<%=index%>" method="POST">
                        <input style="display:none" type="text" name="i" value="<%=i%>" id="">
                        <p class="wish"><button type="submit" class="btn2"><i id="icoWish" class="far mg3 fa-heart"></i></button></p>
                    </form>
                     <p class="lead"><%= subctg.products[i].desc %></p>
                    <hr>
                    <div style="display: inline" class="container">
                        <a class="subctg-price">Price: $ <%= subctg.products[i].price %> </a>
                        <a class="btn btn-danger mrInfo" href="/home/<%= category._id %>/<%=index%>/<%=i%>">More info</a>
                    </div>
                     <p style="display:none" id="check" name="check">.</p>
                </div>
            </div>
        </div>
    </div>

    <% } %>
</div>

<script type="text/javascript" src="/scripts/categoryScript.js"></script>
<script type="text/javascript">
var wishlist= document.getElementById("icoWish");
    wishlist.addEventListener("click", function () {
    if (wishlist.style.backgroundColor == "transparent")
    {
    wishlist.style.backgroundColor="white";
    check.textContent="..";
    }
    else {
    wishlist.style.backgroundColor="transparent";
    check.textContent=".";
    }
    });

</script>

<% include ./partials/footer %>